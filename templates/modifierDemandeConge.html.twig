{% extends "base.html.twig" %}
{% block title %}modifier demande de congé{% endblock %}
{% block body %}
<section class="bg-white p-6 rounded-lg w-full max-w-lg" style="box-shadow: 0 4px 10px rgba(181, 10, 228, 0.35);">
    <h1 class="font-bold text-center mb-4" style="color:rgba(25, 10, 228, 0.35);">Modifier une demande de congé</h1>
    
    <form action="/modificationDemandeConge" method="post">  
     <div>
           <input type="hidden"  name="id" value="{{ demandeConge.id }}" required>
     </div>

     <div class="text-center mb-4">
        <label for="typeConge" class="input-form">Type de congé</label>
        <input id="typeConge" type="text" name="typeConge" value="{{demandeConge.TypeConge}}" required
               class="input text-center px-4 py-2 border border-gray-300 rounded">
      </div>

      <div class="text-center mb-4">
        <label for="dateDebut" class="input-form">Date début</label>
        <input id="dateDebut" type="date" name="dateDebut" value="{{demandeConge.DateDebut}}" required
               class="input text-center px-4 py-2 border border-gray-300 rounded">
      </div>

      <div class="text-center mb-4">
        <label for="dateFin" class="input-form">Date fin </label>
        <input id="dateFin" type="date" name="dateFin" value="{{demandeConge.DateFin}}" required
               class="input text-center px-4 py-2 border border-gray-300 rounded">
      </div>

      <div class="text-center mb-4">
        <label for="statut" class="input-form">Statut</label>
        <input id="statut" type="text" name="statut" value="{{demandeConge.statut}}" required
               class="input text-center px-4 py-2 border border-gray-300 rounded">
      </div>

      <div class="text-center mb-4">
        <label for="employe" class="input-form">Employé</label>
        <select name="employe" id="employe" required class="input text-center px-4 py-2 border border-gray-300 rounded">
            {% for e in employes %}
                <option value="{{ e.id }}" {% if e.id == demandeConge.employe.id %}selected{% endif %}>{{ e.nom }} {{ e.prenom }}</option>
            {% endfor %}
        </select>
      </div>

      <div class="text-center"> 
        <button class="btn-submit border border-gray-300 rounded" type="submit">Modifier</button>
      </div>
    </form>
  </section>
{% endblock %}