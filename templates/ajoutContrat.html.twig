{% extends "base.html.twig" %}
  {% block title %}ajout contrat{% endblock %}
    {% block body %}
   
   <form action="ajouterContrat" method="post">
        Type : <input type="text" name="type" required>
        <br>
        Date début : <input type="date" name ="dateDebut" required>
        <br>
        Date fin : <input type="date" name ="dateFin">
        <br>
        Salaire : <input type="text" name="salaire" pattern="^\d+(\.\d{1,2})?$" required>
        <br>
        <label for="employe">Employé :</label>
        <select name="employe" id="employe" required>
            {% for employe in employes %}  {# Assurez-vous d'avoir une variable 'employes' passée au template #}
                <option value="{{ employe.id }}">{{ employe.nom }} {{ employe.prenom }}</option>
            {% endfor %}
        </select>
        <input type="submit" value="Valider">
   </form>
        {% endblock %}