{% extends 'base.html.twig' %}
{% block body %}
<div class="form-wrapper">
<form class="form-login" method="post">
    <div>
        <h2>Connexion</h2>

        {% if error %}
            <div class="alert alert-danger">Identifiants incorrects.</div>
        {% endif %}

        <label for="username">Email :</label>
        <input type="email" name="_username" id="username" class="form-control" value="{{ last_username }}" required>

        <label for="password">Mot de passe :</label>
        <input type="password" name="_password" id="password" class="form-control" placeholder="Veuillez entrer votre mot de passe" required>

        <button class="btn btn-lg btn-primary" type="submit">Se connecter</button>

        <p class="mt-3">Pas encore inscrit ?
            <a href="register" class="btn-link">Inscrivez-vous!</a>
        </p>
    </div>
</form>
</div>
{% endblock %}
