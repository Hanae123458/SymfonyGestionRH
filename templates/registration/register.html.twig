{% extends 'base.html.twig' %}
{% block body %}
<div class="form-wrapper">
    <form class="form-register" method="post">
        <div>
            <h2>Inscription</h2>

            <label for="username">Nom d'utilisateur:</label>
            <input type="text" name="username" id="username" class="form-control" placeholder="Veuillez entrer un nom d'utilisateur" required>

            <label for="email">Email:</label>
            <input type="email" name="email" id="email" class="form-control" placeholder="Veuillez entrer un email" required>

            <label for="password">Mot de passe:</label>
            <input type="password" name="password" id="password" class="form-control" placeholder="Veuillez entrer un mot de passe" required>

            <button class="btn btn-lg btn-primary" type="submit">S'inscrire</button>

            <p class="mt-3">Déjà inscrit?
                <a href="login" class="btn-link">Connectez-vous!</a>
            </p>
        </div>
    </form>
</div>
{% endblock %}
