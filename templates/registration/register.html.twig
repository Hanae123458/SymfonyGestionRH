{% extends 'base.html.twig' %}
{% block body %}
    <form method="post">
        <div class="form-side">
            <h3>Créez votre compte!</h3>
            <p>Rejoignez notre communauté dès aujourd'hui.</p>
        </div>

        <div class="form-inputs">
            <h2>Inscription</h2>

            <label for="username">Nom d'utilisateur:</label>
            <input type="text" name="username" id="username" class="form-control" placeholder="Entrer un nom d'utilisateur" required>

            <label for="email">Email:</label>
            <input type="email" name="email" id="email" class="form-control" placeholder="Entrer un email" required>

            <label for="password">Mot de passe:</label>
            <input type="password" name="password" id="password" class="form-control" placeholder="Entrer un mot de passe" required>

            <button class="btn btn-lg btn-primary" type="submit">S'inscrire</button>

            <p class="mt-3">Déjà inscrit?
                <a href="login" class="btn-link">Connectez-vous!</a>
            </p>
        </div>
    </form>
{% endblock %}
