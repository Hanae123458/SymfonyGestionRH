{% extends "base.html.twig" %}
{% block title %}Demande Congé{% endblock %}
{% block body %}
<table class="table table-striped table-hover table-bordered align-middle shadow-sm">
  <thead style="background-color: white;">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Employe ID</th>
      <th scope="col">Type Congé</th>
      <th scope="col">Date début</th>
      <th scope="col">Date fin</th>
      <th scope="col">Statut</th>
      <th scope="col">Modification</th>
      <th scope="col">Suppression</th>
    </tr>
  </thead>
  <tbody>
    {% for demande in demandeConge %}
        <tr>
            <td>{{ demande.id }}</td>
            <td>{{ demande.employe.id }}</td>
            <td>{{ demande.TypeConge }}</td>
            <td>{{ demande.DateDebut }}</td>
            <td>{{ demande.DateFin }}</td>
            <td>{{ demande.statut }}</td>
            <td><a href="modifierDemandeConge/{{demande.ID}}" class="btn btn-sm rounded-pill text-white" style="background-color: #28a745;">Modifier</a></td>
            <td><a href="supprimerDemandeConge/{{demande.ID}}" class="btn btn-sm rounded-pill text-white" style="background-color:rgb(228, 10, 32);" onclick="return confirm('Voulez-vous vraiment supprimer cette candidature?')">Supprimer</a></td>
        </tr>
    {% endfor %}  
  </tbody>
</table>{% endblock %}