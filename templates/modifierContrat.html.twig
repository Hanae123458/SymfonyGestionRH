{% extends "base.html.twig" %}
  {% block title %}modification contrat{% endblock %}
    {% block body %}
   
   <form action="/modificationContrat" method="post">
   <input type="hidden"  name="id" value="{{ contrat.id }}" required>
        Type : <input type="text" name="type" value="{{contrat.type}}" required>
        <br>
        Date début : <input type="date" name ="dateDebut" value="{{contrat.DateDebut}}" required>
        <br>
        Date fin : <input type="date" name ="dateFin"value="{{contrat.DateFin}}" >
        <br>
        Salaire : <input type="text" name="salaire" pattern="^\d+(\.\d{1,2})?$" value="{{contrat.salaire}}" required>
        <br>
        Employé : 
            <select name="employe" required>
                {% for e in employes %}
                    <option value="{{ e.id }}" {% if e.id == contrat.employe.id %}selected{% endif %}>{{ e.nom }} {{ e.prenom }}</option>
                {% endfor %}
            </select>
        <input type="submit" value="Valider">
   </form>
        {% endblock %}