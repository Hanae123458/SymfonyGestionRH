{% extends "base.html.twig" %}
{% block title %}modifier contrat{% endblock %}
{% block body %}
<section class="cadre" style="margin:auto; background:white; width: 700px; box-shadow: 0 6px 15px rgb(241, 203, 255) !important; transition: box-shadow 0.2s;">
    <h1 class="font-bold text-center" style="color:rgba(123, 243, 116, 0.69);">Modifier un contrat</h1>
  
  <div class="form-aligner">
    <form action="/modificationContrat" method="post">

     <div>
           <input type="hidden"  name="id" value="{{ contrat.id }}" required>
     </div>  

     <div class="text-center mb-4">
        <label for="type" class="input-form">Type:</label>
        <input id="type" type="text" name="type" value="{{contrat.type}}" required
               class="input text-center px-4 py-2 border border-gray-300 rounded">
      </div>

      <div class="text-center mb-4">
        <label for="dateDebut" class="input-form">Date début:</label>
        <input id="dateDebut" type="date" name="dateDebut" value="{{contrat.DateDebut}}" required
               class="input text-center px-4 py-2 border border-gray-300 rounded">
      </div>

      <div class="text-center mb-4">
        <label for="dateFin" class="input-form">Date fin:</label>
        <input id="dateFin" type="date" name="dateFin" value="{{contrat.DateFin}}" required
               class="input text-center px-4 py-2 border border-gray-300 rounded">
      </div>

      <div class="text-center mb-4">
        <label for="salaire" class="input-form">Salaire:</label>
        <input id="salaire" type="text" name="salaire" pattern="^\d+(\.\d{1,2})?$" value="{{contrat.salaire}}" required
               class="input text-center px-4 py-2 border border-gray-300 rounded">
      </div>

      <div class="text-center mb-4">
        <label for="employe" class="input-form">Employé:</label>
        <select name="employe" id="employe" required class="input text-center px-4 py-2 border border-gray-300 rounded">
            {% for e in employes %}
                <option value="{{ e.id }}" {% if e.id == contrat.employe.id %}selected{% endif %}>{{ e.nom }} {{ e.prenom }}</option>
            {% endfor %}
        </select>
      </div>

      <div class="text-center"> 
        <button class="btn-submit border border-gray-300 rounded" type="submit">Modifier</button>
      </div>

    </form>
  </div>

</section>
{% endblock %}